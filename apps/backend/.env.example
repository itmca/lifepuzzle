# ================================
# Local Development Configuration
# ================================
# 이 파일을 .env로 복사하고 값을 수정하세요.
# cp .env.example .env
#
# 프로덕션 설정은 GitHub Secrets를 사용합니다.

# ================================
# Infrastructure (Docker Compose)
# ================================
MYSQL_ROOT_PASSWORD=your-secure-root-password
MYSQL_PASSWORD=your-secure-password

RABBITMQ_USERNAME=lifepuzzle
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_DEFAULT_VHOST=lifepuzzle
RABBITMQ_ERLANG_COOKIE=your-secure-erlang-cookie

# ================================
# Database
# ================================
DB_LOCAL_URL=jdbc:mysql://127.0.0.1:3306/lifepuzzle
DB_LOCAL_USERNAME=lifepuzzle
DB_LOCAL_PASSWORD=lifepuzzlepass

# ================================
# Email
# ================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ================================
# AWS S3
# ================================
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-northeast-2

# ================================
# Monitoring
# ================================
SENTRY_DSN=your-sentry-dsn-url
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ================================
# Apple Authentication
# ================================
APPLE_TEAM_ID=your-apple-team-id
APPLE_BUNDLE_ID=io.itmca.lifepuzzle
APPLE_PRIVATE_KEY_ID=your-apple-private-key-id
APPLE_PRIVATE_KEY=your-apple-private-key
